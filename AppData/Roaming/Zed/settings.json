// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "inlay_hints": {
    "show_background": false
  },
  "indent_guides": {
    "background_coloring": "disabled"
  },
  "vim_mode": false,
  "languages": {
    "Git Commit": {
      "show_wrap_guides": false
    }
  },
  "collaboration_panel": {
    "dock": "right",
    "button": false
  },
  "show_wrap_guides": false,
  "buffer_line_height": "comfortable",
  "notification_panel": {
    "button": true
  },
  "git_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "status_bar": {
    "active_language_button": true
  },
  "project_panel": {
    "hide_root": false,
    "auto_reveal_entries": true,
    "indent_size": 18.0,
    "git_status": true,
    "folder_icons": true,
    "entry_spacing": "standard",
    "hide_gitignore": false,
    "default_width": 270.0,
    "dock": "right",
    "button": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "ui_font_family": "Geist",
  "agent": {
    "dock": "right",
    "button": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": []
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "env": {}
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "never"
  },
  "cursor_blink": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font", "Agave Nerd Font", "CaskaydiaCove Nerd Font"],
  "buffer_font_family": "Geist Mono",
  "auto_indent_on_paste": true,
  "linked_edits": true,
  "show_edit_predictions": true,
  "wrap_guides": [120],
  "preferred_line_length": 120,
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "icon_theme": "Catppuccin Macchiato",
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte (Blur) [Light]",
    "dark": "Catppuccin Macchiato (Blur) [Light]"
  }
}
